{
  "printWidth": 80,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "plugins": ["prettier-plugin-svelte"],
  "overrides": [
    {
      "files": ["**/.prettierrc", "**/.stackblitzrc"],
      "options": { "parser": "json" }
    },
    {
      "files": ["**/*.svelte"],
      "options": { "parser": "svelte" }
    }
  ]
}
